<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/listviewitemsshape">
    <ImageView
        android:id="@+id/noteStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:src="@drawable/note_display"
        android:contentDescription="@string/write"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="10dp"/>
    <TextView
        android:id="@+id/textTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/noteStart"
        android:textStyle="bold"
        android:textAlignment="center"
        android:maxLines="1"
        android:ellipsize="end"
        android:textSize="18sp"

        />
    <TextView
        android:id="@+id/textContent"
        android:layout_below="@id/textTitle"
        android:layout_toEndOf="@id/noteStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="3"
        android:textSize="17sp"

        />
    <TextView
        android:id="@+id/dateView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textContent"
        android:textStyle="italic"
        android:layout_alignParentEnd="true"
        />


</RelativeLayout>